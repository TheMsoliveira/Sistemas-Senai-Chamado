@model  Senai.Chamados.Web.ViewModels.Usuario.UsuarioViewModel

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section Styles{
    <link href="https://getbootstrap.com/docs/4.1/examples/floating-labels/floating-labels.css" rel="stylesheet" />

}

@using (Html.BeginForm("Editar", "Usuario", FormMethod.Post, new { @Class = "form-signin" }))
{
    @Html.AntiForgeryToken()

    @ViewBag.Autenticado

    <div class="text-center mb-4">
        <img class="mb-4" >
        <h1 class="h3 mb-3 font-weight-normal">Editar Usuário</h1>
        <p>Altere os dados do usuáirio</p>
    </div>

    <p>@ViewBag.Erro</p>

    //colocando o id no formulario visive apenas no codigo fonte usando htm.HiddeFor
    @Html.HiddenFor( x=> x.Id );

    <div class="form-label-group">

        <!-- requeried  =  validação : para exiber mensagens necessário retirar-->
        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", placeHolder = "Informe seu Nome" })
        @Html.LabelFor(x => x.Nome)
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-label-group">


        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeHolder = "Informe o Email" })
        @Html.LabelFor(x => x.Email)
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-label-group">

        @Html.TextBoxFor(x => x.Telefone, new { @class = "form-control", placeHolder = "Informe o Telefone" })
        @Html.LabelFor(x => x.Telefone)
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>

    <div class="form-label-group">
        <!-- necessário usar um Html.PasswordFor -->
        @Html.PasswordFor(x => x.Senha, new { @class = "form-control", placeHolder = "Informe a senha" })
        @Html.LabelFor(x => x.Senha)
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <div class="form-label-group">
        @Html.TextBoxFor(x => x.Cpf, new { @class = "form-control", placeHolder = "Inform O  CPF" })
        @Html.LabelFor(x => x.Cpf)
        @Html.ValidationMessageFor(x => x.Cpf)
    </div>

    <div class="form-label-group">
        @Html.TextBoxFor(x => x.Cep, new { @class = "form-control", placeHolder = "Inform o CEP" })
        @Html.LabelFor(x => x.Cep)
        @Html.ValidationMessageFor(x => x.Cep)
    </div>

    <div class="form-label-group">
        @Html.TextBoxFor(x => x.Logradouro, new { @class = "form-control", placeHolder = "Informe o Logradouro" })
        @Html.LabelFor(x => x.Logradouro)
        @Html.ValidationMessageFor(x => x.Logradouro)
    </div>

    <div class="form-label-group">
        @Html.TextBoxFor(x => x.Numero, new { @class = "form-control", placeHolder = "" })
        @Html.LabelFor(x => x.Numero)
        @Html.ValidationMessageFor(x => x.Numero)
    </div>

    <div class="form-label-group">
        @Html.TextBoxFor(x => x.Complemento, new { @class = "form-control" })
        @Html.LabelFor(x => x.Complemento)
        @Html.ValidationMessageFor(x => x.Complemento)
    </div>

    <div class="form-label-group">
        @Html.TextBoxFor(x => x.Bairro, new { @class = "form-control" })
        @Html.LabelFor(x => x.Bairro)
        @Html.ValidationMessageFor(x => x.Bairro)
    </div>

    <div class="form-label-group">
        @Html.TextBoxFor(x => x.Cidade, new { @class = "form-control" })
        @Html.LabelFor(x => x.Cidade)
        @Html.ValidationMessageFor(x => x.Cidade)
    </div>

    <div class="form-label-group">
        @Html.TextBoxFor(x => x.Estado, new { @class = "form-control" })
        @Html.LabelFor(x => x.Estado)
        @Html.ValidationMessageFor(x => x.Estado)
    </div>

    @*<div class="form-label-group">
        @Html.DropDownListFor(x => x.SexoId, Model.Sexo, "Selecione o Sexo", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SexoId)
    </div>*@

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted">© 2017-2018</p>
}
<!-- necessário copiar a jquery mask no GitHub-->
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.js"></script>
    <script>
        $(document).ready(function () {
            $("#Telefone").mask('(00) 0000-0000');
            $("#Cep").mask('00000-000');
            $("#Cpf").mask('000.000.000-00');
        });
    </script>

}


