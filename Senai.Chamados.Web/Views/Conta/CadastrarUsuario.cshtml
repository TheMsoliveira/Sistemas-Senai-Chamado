
@model Senai.Chamados.Web.Models.CadastrarUsuarioViewModel


@{
    /**/

    ViewBag.Title = "CadastrarUsuario";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section Styles{
    <link href="https://getbootstrap.com/docs/4.1/examples/floating-labels/floating-labels.css" rel="stylesheet" />

}

@using (Html.BeginForm(  "CadastrarUsuario", "Conta", FormMethod.Post, new { @Class = "form-signin" }))
{
    <div class="text-center mb-4">
        <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Floating labels</h1>
        <p>Build form controls with floating labels via the <code>:placeholder-shown</code> pseudo-element. <a href="https://caniuse.com/#feat=css-placeholder-shown">Works in latest Chrome, Safari, and Firefox.</a></p>
    </div>

    <p>@ViewBag.Erro</p>

    <div class="form-label-group">

        <!-- requeried  =  validação : para exiber mensagens necessário retirar-->
        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", placeHolder = "Informe seu Nome" })
        @Html.LabelFor(x => x.Nome)
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-label-group">


        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeHolder = "Informe o Email" })
        @Html.LabelFor(x => x.Email)
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-label-group">

        @Html.TextBoxFor(x => x.Telefone, new { @class = "form-control", placeHolder = "Informe o Telefone" })
        @Html.LabelFor(x => x.Telefone)
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>

    <div class="form-label-group">
        <!-- necessário usar um Html.PasswordFor -->
        @Html.PasswordFor(x => x.Senha, new { @class = "form-control", placeHolder = "Informe a senha" })
        @Html.LabelFor(x => x.Senha)
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted">© 2017-2018</p>
}
