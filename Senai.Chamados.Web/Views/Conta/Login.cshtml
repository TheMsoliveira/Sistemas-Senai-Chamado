@model Senai.Chamados.Web.ViewModels.LoginViewModel

@{


    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section Styles{
    <link href="https://getbootstrap.com/docs/4.1/examples/floating-labels/floating-labels.css" rel="stylesheet" />

}

@using (Html.BeginForm("Login", "Conta", FormMethod.Post, new { @Class = "form - signin" }))
{

    <div class="form-label-group">
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeHolder = "Informe o Email" })
        @Html.LabelFor(x => x.Email)
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-label-group">
        <!-- necessário usar um Html.PasswordFor -->
        @Html.PasswordFor(x => x.Senha, new { @class = "form-control", placeHolder = "Informe a senha" })
        @Html.LabelFor(x => x.Senha)
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted">© 2017-2018</p>
}