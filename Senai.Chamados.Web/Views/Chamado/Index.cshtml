@model Senai.Chamados.Web.ViewModels.Chamado.ListaChamadoViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}



<br />




<div class="jumbotron">
    <center>
        <div class="container">
            <h1>Tela de chamados</h1>
            <p>Visualize todos os chamaldos e crie outros rapidamente</p>
            <a href="/Chamado/Cadastrar" class="btn btn-primary" Cadastrar>Cadastrar</a>
        </div>
    </center>
    
</div>

        @if (TempData["Erro"] != null)
        {
            <div  class="alert alert-danger">
                @TempData["Erro"]
            </div>

        }

        @if (TempData["Sucesso"] != null)
        {
            <div class=" alert alert-sucess">
                @TempData["Sucesso"]
            </div>
        }
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Titulo</th>
                        <th scope="col">Setor</th>
                        <th scope="col">Status</th>
                        <th scope="col">Data Criação</th>
                        <th>
                            
                           
	               </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var chamado in Model.ListaChamados)
                    {
                    <tr>
                        <td>@Html.DisplayFor(x => chamado.Titulo)</td>
                        <td>@Html.DisplayFor(x => chamado.Setor)</td>
                        <td>@Html.DisplayFor(x => chamado.Status)</td>
                        <td>@Html.DisplayFor(x => chamado.DataCriacao)</td>
                        <td class="text-center">


                        <td><a class=" btn btn-primary" href="/Chamado/Editar/@chamado.Id"><i class="glyphicon glyphicon-edit"></i></a></td>

                        @*exibição sera feita aepnas para usuario administradores*@
                        @if (User.IsInRole("Administrador"))
                        {
                            <td><a class=" btn btn-danger" href="/Chamado/Excluir/@chamado.Id"><i class="glyphicon glyphicon-trash"></i> </a></td>
                        }



                    </tr>

                     }
                </tbody>           
            </table>



    


 
