@model Senai.Chamados.Web.ViewModels.Chamado.ChamadoViewModel
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}



@section Styles{
    <link href="https://getbootstrap.com/docs/4.1/examples/floating-labels/floating-labels.css" rel="stylesheet" />
}


@if (ViewBag.Erro != null)
{
    <div class="alert alert-danger">
        @ViewBag.Erro
    </div>
}

@using (Html.BeginForm("Editar", "Chamado", new { @class = "form-sign" }))
{

   
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()

            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.IdUsuario)

            <div>
                <h1 class="h3 mb-3 font-weigth-normal">Editar Chamado</h1><br />
                <p>Edite o chamado</p>
            </div>
            <div class="form-group">

                @Html.LabelFor(x => x.Titulo)
                @Html.TextBoxFor(x => x.Titulo, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Titulo)

            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Descricao)
                @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Descricao)

            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Setor)
                @Html.DropDownListFor(x => x.Setor, Model.ListaSetor, "Selecione o Setor", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Setor, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Status)
                @Html.DropDownListFor(x => x.Status, Model.ListaStatus, "Selecione o Status", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Status, "", new { @class = "text-danger" })


            </div>



            <button type="submit" class="btn btn-lg btn-block btn-primary">Criar</button>
            }
    